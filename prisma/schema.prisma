generator client {
  provider = "prisma-client-js"
  output   = "../src/_generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== Enums =====
enum Role {
  USER
  ADMIN
}

// ===== Auth =====
model User {
  id       String  @id @default(cuid())
  password String
  name     String
  role     Role    @default(USER)
  active   Boolean @default(true)
}

// ===== Models =====
model Book {
  isbn String @id @unique
  name String
}
